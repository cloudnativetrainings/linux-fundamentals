{
    "name": "Linux Fundamentals Training Labs",
    "image": "quay.io/kubermatic-labs/devcontainers:linux-fundamentals-3af1754",
    "customizations": {
      "vscode": {
        "settings": {
          "workbench.editorAssociations": {
            "*.md": "vscode.markdown.preview.editor"
          },
          "files.exclude": {
            ".git/": true,
            ".github/": true,
            ".devcontainer/": true,
            ".99_todos/": true
          }
        }
      }
    },
    "remoteUser": "root",
    "privileged": true,
    "runArgs": [
      "--network=host",
      "--cgroupns=host"
    ],
    "forwardPorts": [
      8080,
      80,
      443
    ]
  }
